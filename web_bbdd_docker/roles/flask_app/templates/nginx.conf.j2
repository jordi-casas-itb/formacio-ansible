server {
    listen 80;
    server_name {{ nginx_server_name }}; # Nom de domini o IP del teu host

    location / {
        proxy_pass http://flask_app:5000; # Nom del servei Docker Compose per a l'aplicaci√≥ Flask
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
